.paper__bg
  = render partial: 'shared/header'
  .index_wrapper
    .index_search_box
      = form_with(url: search_posts_path, local: true, method: :get, class: "index_search_form") do |form|
        = form.text_field :keyword, placeholder: "投稿を検索する", class: "index_search_input"
        = button_tag type: "submit", class: "index_search_button" do
          %i.fas.fa-search
    .posts
      - @posts.each do |post|
        = render partial: "post", locals: { post: post }