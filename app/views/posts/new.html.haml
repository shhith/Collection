.all_views_white__bg
  = render partial: 'shared/header'
  .posting_box
    .container_box
      = form_with(model: @post, local: true) do |form|
        %p フレーズ
        = form.text_field :text,         class: "posting_input", placeholder: "50文字以内", autofocus: true
        %p タイトル
        = form.text_field :title,        class: "posting_input", placeholder: "20文字以内"
        %p 著者
        = form.text_field :author,       class: "posting_input", placeholder: "20文字以内"
        %p 説明
        = form.text_area  :introduction, class: "posting_input", placeholder: "120文字以内", rows: "8"
        %p 画像
        = form.file_field :image,        class: "posting_image"
        = form.submit "投稿", class: "posting_submit_btn"
        